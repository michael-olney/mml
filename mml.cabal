name:                mml

-- The package version.  See the Haskell package versioning policy (PVP) 
-- for standards guiding when and how versions should be incremented.
-- https://wiki.haskell.org/Package_versioning_policy
-- PVP summary:      +-+------- breaking API changes
--                   | | +----- non-breaking API additions
--                   | | | +--- code changes with no API change
version:             0.0.0.0
synopsis: Haskell implementation of the Macroing Markup Language.
-- description:         
homepage:            http://github.com/michael-olney/mml
license:             BSD2
license-file:        LICENSE
author:              Michael Olney <michael@spectralforms.com>
maintainer:          Michael Olney <michael@spectralforms.com>
category:            Web
build-type:          Simple
cabal-version:       >=1.10
executable mml
  main-is:          Main.hs
  other-modules:    MML.Types,
                    MML.HTML,
                    MML.Funs
  other-extensions: GADTs, ScopedTypeVariables, FlexibleContexts, TupleSections

  build-depends:       base >=4.9 && <4.10, parsec >=3.1 && <3.2, containers >=0.5 && <0.6, filepath >=1.4 && <1.5, JuicyPixels >=3.2 && <3.3, friday >=0.2.3.0, friday-juicypixels >= 0.1.2, extra >= 1.5, zip-archive >= 0.3.0.5, directory >= 1.2.6.2, bytestring >= 0.10.8.1, pretty >= 1.1, strict >= 0.3.2, binary >= 0.8.0.0, utf8-string >= 1.0.0.0, process >= 1.4.0.0

  default-language:    Haskell2010

Test-Suite test-mml
  type: exitcode-stdio-1.0
  main-is: MML/Test.hs

  build-depends:       base >=4.9 && <4.10, parsec >=3.1 && <3.2, containers >=0.5 && <0.6, filepath >=1.4 && <1.5, JuicyPixels >=3.2 && <3.3, friday >=0.2.3.0, friday-juicypixels >= 0.1.2, extra >= 1.5, zip-archive >= 0.3.0.5, directory >= 1.2.6.2, bytestring >= 0.10.8.1, pretty >= 1.1, strict >= 0.3.2, binary >= 0.8.0.0, utf8-string >= 1.0.0.0, process >= 1.4.0.0
  build-depends:    HUnit

  default-language:    Haskell2010

executable mml-helloworld
  main-is:          HelloWorld.hs
  other-modules:    MML.Types,
                    MML.Scripting
  other-extensions: GADTs, ScopedTypeVariables, FlexibleContexts, TupleSections

  build-depends:       base >=4.9 && <4.10, containers >= 0.5, binary >= 0.8, bytestring >= 0.10, utf8-string >= 1.0, process >= 1.4

  default-language:    Haskell2010
