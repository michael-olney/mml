name:                mml

-- The package version.  See the Haskell package versioning policy (PVP) 
-- for standards guiding when and how versions should be incremented.
-- https://wiki.haskell.org/Package_versioning_policy
-- PVP summary:      +-+------- breaking API changes
--                   | | +----- non-breaking API additions
--                   | | | +--- code changes with no API change
version:             0.1.0.0
synopsis: Haskell implementation of the Macroing Markup Language.
-- description:         
homepage:            http://mpolney.com/mml
license:             GPL-2
license-file:        LICENSE
author:              Michael Olney <mpolney@mpolney.com>
maintainer:          Michael Olney <mpolney@mpolney.com>
category:            Web
build-type:          Simple
cabal-version:       >=1.10
executable mml
  main-is:          Main.hs
  other-modules:    MML.Types,
                    MML.HTML,
                    MML.Funs
  other-extensions: GADTs, ScopedTypeVariables, FlexibleContexts, TupleSections

-- TODO: Figure out how best to set these values..
  build-depends:       base >=4.9 && <4.10, parsec >=3.1 && <3.2, containers >=0.5 && <0.6, filepath >=1.4 && <1.5, JuicyPixels >=3.2 && <3.3, friday >=0.2.3.0, friday-juicypixels >= 0.1.2, extra >= 1.5, zip-archive >= 0.3.0.5, directory >= 1.2.6.2, bytestring >= 0.10.8.1, pretty >= 1.1.3.4
  
  default-language:    Haskell2010

Test-Suite test-mml
  type: exitcode-stdio-1.0
  main-is: MML/Test.hs

  build-depends:       base >=4.9 && <4.10, parsec >=3.1 && <3.2, containers >=0.5 && <0.6, filepath >=1.4 && <1.5, JuicyPixels >=3.2 && <3.3, friday >=0.2.3.0, friday-juicypixels >= 0.1.2, extra >= 1.5, zip-archive >= 0.3.0.5, directory >= 1.2.6.2, bytestring >= 0.10.8.1, pretty >= 1.1.3.4
  build-depends:    HUnit
 
  default-language:    Haskell2010
